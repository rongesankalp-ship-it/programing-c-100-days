//Take two structs as input and check if they are identical.
#include <stdio.h>
#include <string.h>

struct Student {
    int id;
    char name[50];
    float marks;
};

// Function to check if two structures are identical
int areIdentical(struct Student s1, struct Student s2) {
    if (s1.id == s2.id &&
        strcmp(s1.name, s2.name) == 0 &&
        s1.marks == s2.marks) {
        return 1; // identical
    }
    return 0; // not identical
}

int main() {
    struct Student st1, st2;

    // Input for first structure
    printf("Enter details of Student 1:\n");
    printf("ID: ");
    scanf("%d", &st1.id);
    printf("Name: ");
    scanf("%s", st1.name);
    printf("Marks: ");
    scanf("%f", &st1.marks);

    // Input for second structure
    printf("\nEnter details of Student 2:\n");
    printf("ID: ");
    scanf("%d", &st2.id);
    printf("Name: ");
    scanf("%s", st2.name);
    printf("Marks: ");
    scanf("%f", &st2.marks);

    // Compare structures
    if (areIdentical(st1, st2)) {
        printf("\nBoth structures are IDENTICAL.\n");
    } else {
        printf("\nThe structures are NOT identical.\n");
    }

    ret

